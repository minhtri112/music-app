
header.header 
    .container 
        .row.align-items-center
         .col-3
           .inner-logo 
             a(href="/")
               img(src="/images/logo.svg", alt="Logo" width="150px")
         .col-4
           .box-search
              form(
                action = "/sreach/result"
                method = "GET"
              )
                 div(class = "form-group d-flex mb-0")
                    input(
                      type = "text"
                      placeholder = "Nhập từ khóa ..."
                      class = "form-control"
                      name = "keyword"
                      value = keyValue
                    )
                    button(
                      type = "submit"
                      class = "btn btn-primary"
                    ) Tìm
              .inner-suggest.show
                 .inner-list
         .col-5
          .inner-menu
            ul
              li 
                a(href="/") Trang chủ
              li(class = "sub-menu")
                a(href="/topics") Chủ đề
              li 
                a(href="/favorite-songs") Yêu thích
